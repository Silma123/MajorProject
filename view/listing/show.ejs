<% layout("/layout/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3>Listing details</h3>
    </div>
    <div class="card  col-6 offset-3 show-card">
        
        <img src="<%= listing.image.url%>" class="card-img-top show-img" alt="listing-image">
        <div class="card-body">
            <p class="card-text"><b><%=listing.title %></b><br></p>
            <p class="card-text"><i> Owned by <b><%=listing.Owner.username %></b></i></p>
                <br>
                <p class="card-text"><%= listing.description%></p><br>
                <p class="card-text">&#2547; <%= listing.price.toLocaleString("en-bd")%></p><br>
                <p class="card-text"></p><%= listing.country%></p><br>
                <p class="card-text"></p><%= listing.location%></p>
        </div>
    </div>
   
    <br>
    <% if(currUser && currUser._id.equals(listing.Owner._id)) { %>
    <div class="btns ">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit </a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=Delete">
        <button class="btn btn-dark offset-5 add-btn">Delete</button>
    </form>
</div>
<% } %>
<div class="col-8 offset-3 mb-3">
    <hr>
    <h4>Leave a review</h4>
    <form action="/listings/<%=listing._id%>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mt-3 mb-3">
           <label for="rating" class="form-label" >Rating</label> 
           <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
        <div class="invalid-feedback">Review cannot be empty</div>
        </div>
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Comment box cannot be empty</div>
        </div>
        <button class="btn btn-dark">Submit</button>
    </form>
    <hr>
    <h4>All Reviews</h4>
     <div class="row">
    <% for(review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3 offset-2">
            <div class="card-body">
                <h5 class="card-title">Janie Doe</h5>
                <p class="card-text"><%=review.comment%></p>
                <p class="card-text"><%= review.rating%></p>
            </div>
            <form class="mb-3" method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
    <% }%>
</div>
</div>
</div>

</body>